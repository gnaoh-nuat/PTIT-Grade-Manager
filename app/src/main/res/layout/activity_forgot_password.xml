<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:id="@+id/tv_header_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên Mật Khẩu"
        android:textSize="28sp"
        android:textColor="#FF6600"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"/>

    <!-- Bước 1: Nhập Email -->
    <LinearLayout
        android:id="@+id/step1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/et_email_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Email đã đăng ký"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>
    </LinearLayout>

    <!-- Bước 2: Nhập OTP -->
    <LinearLayout
        android:id="@+id/step2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã xác thực (OTP)"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_confirm_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>
    </LinearLayout>

    <!-- Bước 3: Nhập Mật khẩu mới -->
    <LinearLayout
        android:id="@+id/step3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn tất"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_back_to_login_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại Đăng nhập"
        android:textColor="#FF6600"
        android:layout_marginTop="24dp"
        android:padding="8dp"/>

</LinearLayout>

